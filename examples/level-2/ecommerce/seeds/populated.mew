-- Categories
--# seed_cat_electronics
SPAWN electronics: Category {
  name = "Electronics",
  slug = "electronics",
  description = "Electronic devices and accessories"
}

--# seed_cat_computers
SPAWN computers: Category {
  name = "Computers",
  slug = "computers",
  description = "Laptops and desktops"
}

--# seed_cat_books
SPAWN books: Category {
  name = "Books",
  slug = "books",
  description = "Physical and digital books"
}

-- Products
--# seed_prod_laptop
SPAWN laptop: PhysicalProduct {
  sku = "COMP-0001",
  name = "Laptop Pro 15",
  description = "High-performance laptop",
  price = 1299.99,
  status = "active",
  weight_kg = 2.1
}

--# seed_prod_phone
SPAWN phone: PhysicalProduct {
  sku = "ELEC-0001",
  name = "SmartPhone X",
  price = 799.99,
  status = "active",
  weight_kg = 0.2
}

--# seed_prod_ebook
SPAWN ebook: DigitalProduct {
  sku = "BOOK-0001",
  name = "Rust Programming Guide",
  price = 29.99,
  status = "active",
  file_size_mb = 15.5
}

--# seed_prod_headphones
SPAWN headphones: PhysicalProduct {
  sku = "ELEC-0002",
  name = "Wireless Headphones",
  price = 199.99,
  status = "active",
  weight_kg = 0.3
}

--# seed_prod_discontinued
SPAWN old_product: Product {
  sku = "OLD-0001",
