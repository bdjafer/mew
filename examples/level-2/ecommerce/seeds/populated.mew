-- Reviews
--# seed_review_laptop
SPAWN laptop_review: Review {
  rating = 5,
  title = "Great laptop!",
  body = "Best laptop I have ever owned.",
  is_verified_purchase = true
}

--# seed_review_phone
SPAWN phone_review: Review {
  rating = 4,
